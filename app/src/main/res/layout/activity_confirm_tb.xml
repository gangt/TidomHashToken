<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/activity_bg"
    android:layout_height="match_parent">
    <include layout="@layout/header"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量     "
            android:paddingBottom="10dp"
            android:gravity="center"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tb_confirm_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:hint="0.04HSR"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/activity_bg"
        android:layout_marginLeft="20dp"
        ></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="矿工费 "
            android:paddingBottom="10dp"
            android:gravity="center"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tb_confirm_fee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@null"
            android:hint="0.04HSR"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/activity_bg"
        android:layout_marginLeft="20dp"
        ></View>

    <LinearLayout

        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址     "
            android:paddingBottom="10dp"
            android:gravity="center"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tb_confirm_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@null"
            android:singleLine="true"
            android:paddingRight="5dp"
            android:hint="0.04HSR"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/activity_bg"
        android:layout_marginLeft="20dp"
        ></View>

    <TextView
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/confirm_txt"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="12sp"
        android:drawableLeft="@drawable/about_icon"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        />

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="40dp"
      android:gravity="center_horizontal"
      >
      <ImageView
          android:paddingTop="3dp"
          android:id="@+id/right_img"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:src="@drawable/right"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
          android:layout_toRightOf="@id/right_img"
          android:textSize="24sp"
          android:text="操作成功"
          />

  </RelativeLayout>


    <TextView
        android:id="@+id/user_tb_confirm_back"
        android:layout_marginTop="40dp"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="@drawable/bg_button_selector"
        android:text="返回首页"
        android:textColor="@color/white"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        />

    <TextView
        android:id="@+id/user_tb_confirm_history"
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="@drawable/bg_button_selector"
        android:text="查看记录"
        android:textColor="@color/white"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        />

</LinearLayout>
