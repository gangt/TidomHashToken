<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_weight="1"

    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listbuy"
        android:layout_width="match_parent"
        android:layout_above="@+id/buyfragmentrightrelative"
        android:layout_weight="1"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/buyfragmentrightrelative"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_centerVertical="true"
        android:layout_height="40dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/baseline"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/baseline"/>
        <TextView
            android:id="@+id/coinmoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            style="@style/textstylemiddlered"
            android:text="￥120000"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/coinchange"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/main_datachange"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listsell"
        android:layout_width="match_parent"
        android:layout_below="@+id/buyfragmentrightrelative"
        android:layout_weight="1"
        android:layout_above="@+id/buyfragmentrightlinearlayout"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/buyfragmentrightlinearlayout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:background="@color/white"
        android:layout_weight="0">

        <RelativeLayout
            android:id="@+id/showgear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:id="@+id/textssss1"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="10dp"
                android:textColor="@color/red"
                android:layout_height="wrap_content"
                android:text="默认"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_below="@+id/textssss1"
                android:gravity="center"
                android:textSize="8dp"
                android:textColor="@color/gray"
                android:layout_height="wrap_content"
                android:text="显示档位"/>

        </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/baseline"/>


        <RelativeLayout
            android:id="@+id/consolidationdepth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:id="@+id/textssss2"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="10dp"
                android:textColor="@color/red"
                android:layout_height="wrap_content"
                android:text="默认"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_below="@+id/textssss2"
                android:gravity="center"
                android:textSize="8dp"
                android:textColor="@color/gray"
                android:layout_height="wrap_content"
                android:text="合并深度"/>

        </RelativeLayout>


    </LinearLayout>



</RelativeLayout>