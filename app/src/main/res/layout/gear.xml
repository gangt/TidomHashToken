<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/lineradbg"
    android:showDividers="middle"
    android:divider="@drawable/baseline"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/listsize15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textstylesmallblack"
        android:paddingTop="8dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:paddingBottom="8dp"
        android:layout_gravity="center_horizontal"
        android:text="15档"/>

    <TextView
        android:id="@+id/listsize10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textstylesmallblack"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_gravity="center_horizontal"
        android:text="10档"/>

    <TextView
        android:id="@+id/listsize5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textstylesmallblack"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_gravity="center_horizontal"
        android:text="5档"/>

    <TextView
        android:id="@+id/listsizedefault"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textstylesmallblack"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_gravity="center_horizontal"
        android:text="默认"/>

</LinearLayout>